<mvc:View controllerName="poker.controllers.Table" xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:poker="poker.controls" xmlns="sap.m">
    <Page title="Table">
        <content>

            <List id="players" items="{/players}"
                includeItemInSelection="true">
                <headerToolbar>
                    <Toolbar>
                        <content>
                            <Title text="Table Players" level="H2" />
                        </content>
                    </Toolbar>
                </headerToolbar>
                <StandardListItem title="{name}"
                    counter="{bet}" />
            </List>

            <Panel headerText="Your Cards">
                <content>
                    <l:HorizontalLayout id="playerCards" content="{/playerCards}">
                        <poker:Card kind="{kind}"
                            suit="{suit}">
                        </poker:Card>
                    </l:HorizontalLayout>

                </content>
            </Panel>

            <Panel headerText="Community Cards">
                <content>
                    <l:HorizontalLayout id="communityCards" content="{/communityCards}">
                        <poker:Card kind="{kind}"
                            suit="{suit}">
                        </poker:Card>
                    </l:HorizontalLayout>
<!--                     <l:Grid id="communityCards" content="{/communityCards}"> -->
<!--                         <poker:Card kind="{kind}" -->
<!--                             suit="{suit}"> -->
<!--                         </poker:Card> -->
<!--                     </l:Grid> -->
                </content>
            </Panel>
        </content>

        <footer>
            <Toolbar>
                <Input id="amount" width="6em" placeholder="amount" />
                <Button id="bet" text="Bet" press="placeBet" />
                <ToolbarSpacer />
                <Button id="call" text="Call" press="placeBet" />
                <Button id="check" text="Check" press="placeBet" />
                <Button id="fold" text="Fold" press="placeBet" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
