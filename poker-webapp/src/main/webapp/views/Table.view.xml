<mvc:View controllerName="poker.controllers.Table" xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns="sap.m">
    <Page title="Table">
        <content>
            <List id="players" items="{/players}"
                includeItemInSelection="true">
                <headerToolbar>
                    <Toolbar>
                        <content>
                            <Title text="Players" level="H2" />
                        </content>
                    </Toolbar>
                </headerToolbar>
                <StandardListItem title="{name}"
                    iconDensityAware="false" iconInset="false" press="handlePress"
                    detailPress="handleDetailPress" />
            </List>
        </content>
    </Page>
</mvc:View>
